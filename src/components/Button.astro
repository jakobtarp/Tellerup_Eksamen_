---
const { link, style = "sort", variant = "primary", size = "medium" } = Astro.props;
import "../styles/global.css";
import "../styles/tokens.css";
---

<a class="my-auto" href={link} data-variant={variant} data-size={size} data-style={style}>
  <slot />
</a>

<style>
  [data-variant="tags"] {
    background-color: var(--ctaColorRed);
    color: var(--ctaColorWhite);
    border-radius: var(--ctaBorderRadius);
    font-size: 16px;
    width: 100px;
    height: 25px;
    display: block;
    box-shadow: var(--button-shadow);
    text-align: center;
  }

  [data-variant="primary"] {
    background-color: var(--ctaColorRed);
    text-decoration: none;
    border-radius: var(--ctaBorderRadius);
    box-shadow: var(--button-shadow);
    text-align: center;
  }
  [data-variant="primary"]:hover {
    scale: var(--ctaHover);
    box-shadow: var(--button-shadow);
    text-align: center;
    transition-duration: 200ms;
  }

  [data-variant="secondary"] {
    background-color: var(--ctaColorWhite);
    color: var(--ctaColorRed);
    border-radius: var(--ctaBorderRadius);
    border-color: var(--ctaColorRed);
    text-decoration: none;
    border-width: 2px;
    box-shadow: var(--button-shadow);
    text-align: center;
  }
  [data-variant="secondary"]:hover {
    scale: var(--ctaHover);
    box-shadow: var(--button-shadow);
    text-align: center;
    transition-duration: 200ms;
  }

  [data-variant="tertiary"] {
    text-decoration: var(--ctaTextDecoration);
    font-size: 16px;
  }

  [data-variant="tertiary"]:hover {
    scale: var(--ctaHover);
  }

  [data-variant="ghost"] {
    font-weight: bold;
    font-size: var(--font-size-base);
    text-decoration: none;
  }
  [data-size="small/base"] {
    padding-inline: 25px;
    padding-block: 8px;
    font-size: 18px;
    padding-inline: 25px;
    display: inline-block;

    @media (max-width: 600px) {
      font-size: 13px;
      padding-block: 6px;
      padding-inline: 0;
      width: 100%;
    }
  }
  [data-size="base"] {
    padding-inline: 25px;
    padding-block: 8px;
    font-size: 18px;
    padding-inline: 25px;

    display: inline-block;

    @media (max-width: 600px) {
      font-size: 16px;
      padding-block: 6px;
      padding-inline: 0;
      width: 100%;
    }
  }

  [data-size="big"] {
    font-size: 18px;
    padding-block: 8px;
    padding-inline: 40px;
    display: inline-block;
    /* display: flex;
    justify-content: center; */

    @media (max-width: 600px) {
      padding-block: 6px;
      width: 100%;
      font-size: 15px;
      padding-inline: 0;
    }
  }

  [data-size="tags"] {
  }

  [data-style="red"] {
    color: var(--ctaColorRed);
  }

  [data-style="sort"] {
    color: var(--ctaColorBlack);
  }

  [data-style="green"] {
    color: var(--ctaColorGreen);
  }

  [data-style="white"] {
    color: var(--ctaColorWhite);
  }
</style>
