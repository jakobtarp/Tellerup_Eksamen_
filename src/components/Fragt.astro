---
const { icon, title, text } = Astro.props;
---

<div class="container">
  <figure>
    <img src={icon} alt="delivery icon" role="img"/>
  </figure>
  <div class="text_container">
    <h3>{title}</h3>
    <p>{text}</p>
  </div>
</div>

<style>
  .container {
    padding: 10px;
    display: flex;
    justify-content: center;
    flex-direction: column;
    width: 220px;
    height: 200px;
    margin: 0;
    gap: 12px;
  }
  figure img {
    width: 100px;
    margin: 0 auto;
  }
  .text_container {
    display: flex;
    flex-direction: column;
    gap: 5px;
    max-width: 200px;
    margin: 0 auto;
  }
  .text_container h3 {
    font-weight: var(--fontBold);
    text-align: center;
  }

  .text_container p {
    text-align: center;
  }
</style>
