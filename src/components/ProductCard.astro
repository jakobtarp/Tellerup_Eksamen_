---
import "../styles/tokens.css";
import "../styles/base.css";
import "../styles/global.css";
const { titel, best, imgPath, imgPath1, imgPath2, imgPath3, imgPath4, imgPath5, imgPath6, imgPath7, imgPath8, forfatter, part, price, anmeldser, newBadge, newBadge1 } = Astro.props;
---

<article class="mt-5 lg:w-[250px] lg:h-[470px] w-[167px] h-[260px] shaddowcard mx-auto mb-2 hover:scale-105 transition duration-300 cursor-pointer">
  <a href="/singleview.html">
    <div class="grid imgcard relative">
      {newBadge && <p class="badge absolute right-0 bottom-0 ">NYHED</p>}
      {newBadge1 && <p class="best absolute lg:-right-5 lg:-top-5 rounded-full lg:py-10 lg:px-3 -top-5 -right-2 py-7 px-[5px] ">BESTSELLER</p>}

      <img class="imgradius mx-auto my-6 hidden lg:block" src={imgPath} alt="" height="250" width="170" />

      <!-- Mobil billede -->
      <img class="imgradius mx-auto lg:my-6 lg:hidden sm:block md:block" src={imgPath} alt="" height="134" width="90" />
      <div class="format absolute rounded-r-lg mx-auto lg:bottom-20 bottom-6">
        <img class="lg:w-9 w-6 p-1 mt-1" src={imgPath1} alt="mobile photo" height="" width="" />
        <img class="lg:w-9 w-6 p-1" src={imgPath2} alt="mobile photo" height="" width="" />
        <img class="lg:w-9 w-6 p-1 mb-1" src={imgPath3} alt="mobile photo" height="" width="" />
      </div>
    </div>
    <article class="lg:px-3 px-1 relative">
      <h3 class="titel lg:mt-3">{titel}</h3>
      <p class="forfatter lg:my-2">{forfatter}</p>
      <p class="part">{part}</p>
      <h3 class="price lg:my-3">{price}</h3>
      <div class="flex w-3 lg:w-4 absolute right-[60px] lg:right-20 lg:bottom-1">
        <img src={imgPath4} alt="stars" role="img" />
        <img src={imgPath5} alt="stars" role="img" />
        <img src={imgPath6} alt="stars" role="img" />
        <img src={imgPath7} alt="stars" role="img" />
        <img src={imgPath8} alt="stars" role="img" />
      </div>
    </article>
  </a>
</article>

<style>
  .format {
    background-color: var(--bluegrey);
  }
  .shaddowcard {
    box-shadow: var(--box-shadow);
  }
  .imgcard {
    border-top-left-radius: var(--globalBorderRadiusSm);
    border-top-right-radius: var(--globalBorderRadiusSm);
    background-color: var(--cardBg);
  }
  article {
    border-radius: var(--cardBorderRadius);
    box-shadow: var(--shadowDefault);
    background-color: var(--cardBgColor);
    font-family: var(--primary);
  }

  h3 {
    font-size: var(--font-size-jakob);
    font-weight: var(--fontSemibold);
  }

  .forfatter {
    font-weight: var(--fontNormal);
  }

  .part {
    padding: 3px;
    display: inline;
    background-color: var(--bluegrey);
    color: var(--white);
  }

  .price {
    font-weight: var(--fontSemibold);
    padding-left: var(--sm);
    color: var(--ctaColorRed);
    line-height: var(--primaryLineHeight);
  }

  .badge {
    color: var(--white);
    font-size: var(--font-size-sm);
    width: 100px;
    background-color: var(--bluegrey);
    font-weight: var(--fontBold);
    text-align: center;
    border-top-left-radius: var(--globalBorderRadiusSm);
  }

  .best {
    color: var(--white);
    font-size: var(--font-size-xs);
    width: 100px;
    background-color: var(--royalblue);
    font-weight: var(--fontSemibold);
  }

  @media (max-width: 640px) {
    .best {
      color: var(--white);
      font-size: var(--font-size-xxs);
      width: 70px;
      background-color: var(--royalblue);
      font-weight: var(--fontSemibold);
    }
  }
</style>
