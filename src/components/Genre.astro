---
import Button from "../components/Button.astro";
---

<section>
  <div class="headerGenre">
    <h2>De mest populære genre</h2>
    <Button link="genre.html" variant="tertiary" style="red" aria-label="Se alle genrer">Se alle genrer</Button>
  </div>

  <div class="containerGenre">
    <a href="kategori.html" aria-label="Gå til kategorier" class="box" style="background-color: var(--darkvanilla)"><h3>BØRNEBØGER</h3></a>
    <a href="kategori.html" aria-label="Gå til kategorier" class="box" style="background-color: var(--vanilla)"><h3>KRIMI</h3></a>
    <a href="kategori.html" aria-label="Gå til kategorier" class="box white" style="background-color: var(--royalblue)"><h3>ROMANTIK</h3></a>
    <a href="kategori.html" aria-label="Gå til kategorier" class="box" style="background-color: var(--lighterblue)"><h3>UNGDOMSROMANER</h3></a>
    <a href="kategori.html" aria-label="Gå til kategorier" class="box white" style="background-color: var(--royalblue)"><h3>SCI-FY</h3></a>
    <a href="kategori.html" aria-label="Gå til kategorier" class="box" style="background-color: var(--darkvanilla)"><h3>FANTASY</h3></a>
  </div>
</section>
<style>
  .containerGenre {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 20px;
  }

  .headerGenre {
    display: flex;
    justify-content: space-between;
    /* margin: 8px; */

    margin-bottom: 10px;
  }
  .box {
    flex: 0 0 calc(33.33% - 20px);

    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: black;
    text-decoration: none;
    /* transition: background-color 0.3s ease; */
  }

  .box:hover {
    background-color: #333;
    scale: 105%;
    transition-duration: 300ms;
  }
  .box h3 {
    margin: 0;
    font-weight: var(--fontBold);
  }
  .white {
    color: white;
  }
  @media (max-width: 768px) {
    .box {
      flex: 0 0 calc(50% - 20px);
    }
  }
  @media (max-width: 480px) {
    .box {
      flex: 0 0 calc(100% - 20px);
    }
  }
</style>
