---
import MainLayout from "../layouts/MainLayout.astro";
import MainHeader from "../components/MainHeader.astro";
import FavoritItem from "../components/FavoritItem.astro";
import Brodkrummer from "../components/Brodkrummer.astro";
import "../styles/global.css";
import "../styles/tokens.css";

meta: title: "favoritter";
description: "varer du synes godt om";
keywords: "favoritter";
---

<MainLayout title="Favoritter">
  <MainHeader title="Favoritter" aria-label="favoritter" />

  <!-- Brødskrummer -->
  <section>
    <Brodkrummer andre_side="Kategorier" andre_pil="❯" tredje_side="Favorit" />
  </section>

  <section>
    <div class="overskrift">
      <h3 aria-label="vare">Vare</h3>
      <h3 aria-label="pris">Pris</h3>
    </div>
    <div class="stroke"></div>
    <FavoritItem img="/single.webp" title="Spillets forbandelse" author="Kristoffer J. Andersen" format="Indbundet" delivery="1-3 hverdage" price="330 kr."/>
    <div class="stroke"></div>
    <FavoritItem img="/single.webp" title="Spillets forbandelse" author="Kristoffer J. Andersen" format="Indbundet" delivery="1-3 hverdage" price="330 kr."/>
    <div class="stroke"></div>
    <p class="side" aria-label="viser sider">Viser 2 - 2 (af 2 produkter)</p>
  </section>
</MainLayout>
<style>
  section {
    padding-inline: var(--globalPaddingL);
  }

  .overskrift {
    display: none;
  }
  @media (min-width: 500px) {
    .overskrift {
      display: flex;
      justify-content: space-between;
      padding-inline: 25px;
      padding-block: 20px;
      margin-top: 80px;
    }
  }

  .stroke {
    border: 0.3px solid black;
  }
  .side {
    margin-block: 30px;
    display: flex;
    justify-content: center;
    margin-bottom: 80px;
  }
</style>
