---
import MainLayout from "../layouts/MainLayout.astro";
import MainHeader from "../components/MainHeader.astro";
import Button from "../components/Button.astro";
import FavoritItem from "../components/FavoritItem.astro";

import "../styles/global.css";
import "../styles/tokens.css";
---

<MainLayout title="Favoritter">
  <MainHeader title="Favoritter" />
  <div class="overskrift">
    <h3>Vare</h3>
    <h3>Pris</h3>
  </div>
  <div class="stroke"></div>
  <FavoritItem img="public/single.webp" title="Spillets forbandelse" author="Kristoffer J. Andersen" format="Indbundet" delivery="1-3 hverdage" price="330 kr." />
  <div class="stroke"></div>
  <FavoritItem img="public/single.webp" title="Spillets forbandelse" author="Kristoffer J. Andersen" format="Indbundet" delivery="1-3 hverdage" price="330 kr." />
  <div class="stroke"></div>
  <p class="side">Viser 2 - 2 (af 2 produkter)</p>
</MainLayout>
<style>
  .overskrift {
    display: none;
  }
  @media (min-width: 500px) {
    .overskrift {
      display: flex;
      justify-content: space-between;
      padding-inline: 50px;
      padding-block: 20px;
      margin-top: 80px;
    }
  }

  .stroke {
    border: 0.3px solid black;
    margin-inline: 20px;
  }
  .side {
    margin-block: 30px;
    display: flex;
    justify-content: center;
    margin-bottom: 80px;
  }
</style>
